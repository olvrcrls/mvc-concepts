<div class="row">
	<h1 class="page-header">Brands</h1>
	<%= link_to "Create Brand", new_brand_path, { class: "btn btn-md btn-success" } %>
</div>
<br>
<div class="row">
	<table class="table table-condensed" id="brands-table">
		<thead>
			<tr>
				<td>Brand Name</td>
				<td colspan="2">Actions</td>
			</tr>
		</thead>
		<tbody>
		<% @brands.each do |brand| %>
			<tr>
				<td>
					<%= brand.name %>
				</td>
				<td>
					<%= link_to "Edit", edit_brand_path(brand) %>
				</td>
				<td>
					<%= link_to "Delete", brand_path(brand), method: :delete %>
				</td>
			</tr>
		<% end %>
		</tbody>
	</table>
</div>
